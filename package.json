{
  "name": "Dilbert-app",
  "version": "1.0.0",
  "description": "An app to keep track of hours spent by user on PC.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build:all": "electron-builder -mwl",
    "build:mac": "electron-builder --mac",
    "pack": "electron-builder --dir",
    "rebuild:electron": "npm rebuild --runtime=electron --target=1.4.0 --disturl=https://atom.io/download/atom-shell --abi=50",
    "dist" : "build"
  },
  "repository": "https://github.com",
  "keywords": [
    "Electron",
    "Dilbert"
  ],
  "author": "Sujit Gawas",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "1.4.0",
    "electron-builder": "^19.37.2",
    "electron-packager": "^9.1.0",
    "electron-rebuild": "^1.6.0"
  },
  "dependencies": {
    "@paulcbetts/system-idle-time": "git+https://github.com/paulcbetts/node-system-idle-time.git",
    "jquery": "^3.2.1",
    "moment": "^2.19.1",
    "qs-parser": "^0.4.8"
  },
  "build": {
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/png"
    },
    "win": {
      "target": "NSIS",
      "icon": "assets/icons/win/128x128.ico"
    }
  }
}
